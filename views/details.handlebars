<body>
    <div class="details content">
        <h2>{{products.title}}</h2>
        <div class="content">
        <p> {{products.details}} </p>
        </div>
        <a class="buy" data-doc="{{products.id}}" ><img src="/public/images/711192.svg" alt="" ></a>
    </div>
    <script>
    
        const buyBtn = document.querySelector('.buy')
        buyBtn.addEventListener('click' , (e)=>{
            const email = prompt("What is the email you want to sent")
            const buyerEmail = prompt("write your email")
            const password = prompt("password")

            console.log(email)
            const id = buyBtn.dataset.doc
            console.log(id)
            axios({
                method : 'post',
                url : "/send-product/:id",
                data : {
                    email : email,
                    id : id,
                    buyer : buyerEmail,
                    password:password
                }
            })
            .then((response)=>{
                console.log(response)
            })
            .catch(err=>console.log(err))
            console.log(email)
        })

    </script>
</body>